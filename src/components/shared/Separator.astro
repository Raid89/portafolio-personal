<div class="separator text-center font-maker text-6xl text-white py-[40px] md:py-[150px] flex flex-col md:flex-row gap-10 items-center justify-center">
  imaginar. planear. crear.
</div>

<style>
  .separator {
    background-image: url("../../assets/lineas-fondo.png");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }
</style>

<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";
  import SplitText from "gsap/SplitText";

  const split = new SplitText(".separator", { type: "words,chars" });
  const chars = split.chars;

  gsap.from(chars, {
    y: 80,
    opacity: 0,
    ease: "back.out(1.7)",
    duration: 1,
    stagger: 0.05,
    scrollTrigger: {
      trigger: ".separator",
      start: "top 80%",
      toggleActions: "play none none none",
    },
  });
</script>
