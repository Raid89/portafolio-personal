---
import BetplaySS1 from "@assets/screenshots/betplay1.png";
import { Image } from "astro:assets";
---

<!-- Hero Section with Modern Design -->
<section
  id="betplay-section"
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-blue-900 to-indigo-900 text-white"
>
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden opacity-20">
    <div
      class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')]"
    >
    </div>
  </div>

  <!-- Animated Grid Overlay -->
  <div
    class="absolute inset-0 bg-grid-white/[0.05] [mask-image:linear-gradient(0deg,transparent,white)]"
  >
  </div>

  <!-- Glow Effects -->
  <div
    class="absolute -top-1/2 -right-1/2 w-full h-full bg-cyan-500/10 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"
  >
  </div>
  <div
    class="absolute -bottom-1/2 -left-1/2 w-full h-full bg-blue-500/10 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"
  >
  </div>

  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20 md:py-24 lg:py-32"
  >
    <div
      class="grid md:grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center"
    >
      <!-- Content -->
      <div class="hero-content">
        <span
          class="hero-subtitle inline-block text-cyan-400 text-sm font-semibold uppercase tracking-wider mb-4"
        >
          Proyecto Destacado
        </span>

        <h1
          class="hero-title text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-4 sm:mb-6"
        >
          <span class="block text-xl sm:text-2xl md:text-3xl mb-1 sm:mb-2"
            >Experiencia en</span
          >
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-blue-400"
          >
            Betplay Colombia
          </span>
        </h1>

        <p
          class="hero-description text-base sm:text-lg md:text-xl text-gray-300 mb-6 sm:mb-8 max-w-2xl"
        >
          Lideré el desarrollo de soluciones innovadoras en la plataforma de
          apuestas líder en Latinoamérica, mejorando la experiencia de millones
          de usuarios con tecnologías de vanguardia y arquitecturas escalables.
        </p>

        <div class="hero-buttons flex flex-wrap gap-4">
          <a
            target="_blank"
            href="https://betplay.com.co/"
            class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-medium bg-gradient-to-r from-cyan-500 to-blue-500 text-white hover:from-cyan-600 hover:to-blue-600 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg"
          >
            Visitar Web
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 ml-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
          <a
            href="/#contact"
            class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-medium bg-white/10 text-white hover:bg-white/20 backdrop-blur-sm transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg"
          >
            Contáctame
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 ml-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
              ></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
              ></path>
            </svg>
          </a>
        </div>

        <!-- Stats -->
        <div class="mt-8 sm:mt-12 grid grid-cols-3 gap-3 sm:gap-4">
          <div
            class="bg-white/5 backdrop-blur-sm p-4 rounded-xl border border-white/10"
          >
            <div class="text-2xl font-bold text-cyan-400">+3</div>
            <div class="text-sm text-gray-400">Países</div>
          </div>
          <div
            class="bg-white/5 backdrop-blur-sm p-4 rounded-xl border border-white/10"
          >
            <div class="text-2xl font-bold text-cyan-400">+5M</div>
            <div class="text-sm text-gray-400">Usuarios</div>
          </div>
          <div
            class="bg-white/5 backdrop-blur-sm p-4 rounded-xl border border-white/10"
          >
            <div class="text-2xl font-bold text-cyan-400">99.9%</div>
            <div class="text-sm text-gray-400">Uptime</div>
          </div>
        </div>
      </div>

      <!-- Image -->
      <div class="hero-image relative z-10 mt-10 md:mt-0">
        <div class="relative">
          <div
            class="absolute -inset-4 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-2xl opacity-50 blur-xl"
          >
          </div>
          <div
            class="relative bg-gray-900/80 backdrop-blur-sm rounded-xl overflow-hidden border border-white/10 shadow-2xl"
          >
            <Image
              src={BetplaySS1}
              alt="Dashboard Betplay"
              class="w-full h-auto object-cover"
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"
            >
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
                <div class="ml-2 text-sm text-gray-400">betplay.com.co</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
    <div
      class="animate-bounce w-10 h-16 rounded-full border-2 border-white/20 flex items-start justify-center p-2"
    >
      <div class="w-1 h-4 bg-white/60 rounded-full"></div>
    </div>
  </div>

  <script>
    import gsap from "gsap";
    import scrollTrigger from "gsap/ScrollTrigger";

    // Animación para el título
    const title = document.querySelector(".hero-title");
    if (title) {
      gsap.fromTo(
        title,
        { y: 50, opacity: 0 },
        {
          y: 0,
          opacity: 1,
          duration: 1,
          ease: "power3.out",
          scrollTrigger: {
            trigger: title,
            start: "top 80%",
            toggleActions: "play none none none",
          },
        },
      );
    }

    // Animación para el subtítulo
    const subtitle = document.querySelector(".hero-subtitle");
    if (subtitle) {
      gsap.fromTo(
        subtitle,
        { y: 30, opacity: 0 },
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          delay: 0.2,
          ease: "power3.out",
          scrollTrigger: {
            trigger: subtitle,
            start: "top 80%",
            toggleActions: "play none none none",
          },
        },
      );
    }

    // Animación para la descripción
    const description = document.querySelector(".hero-description");
    if (description) {
      gsap.fromTo(
        description,
        { y: 30, opacity: 0 },
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          delay: 0.4,
          ease: "power3.out",
          scrollTrigger: {
            trigger: description,
            start: "top 80%",
            toggleActions: "play none none none",
          },
        },
      );
    }

    // Animación para los botones
    const buttons = document.querySelectorAll(".hero-buttons a");
    buttons.forEach((button, index) => {
      gsap.fromTo(
        button,
        { y: 30, opacity: 0 },
        {
          y: 0,
          opacity: 1,
          duration: 0.6,
          delay: 0.6 + index * 0.1,
          ease: "back.out(1.7)",
          scrollTrigger: {
            trigger: button,
            start: "top 80%",
            toggleActions: "play none none none",
          },
        },
      );
    });

    // Animación para la imagen
    const image = document.querySelector(".hero-image");
    if (image) {
      gsap.fromTo(
        image,
        { scale: 0.9, opacity: 0, rotate: -2 },
        {
          scale: 1,
          opacity: 1,
          rotate: 0,
          duration: 1,
          delay: 0.3,
          ease: "elastic.out(1, 0.5)",
          scrollTrigger: {
            trigger: image,
            start: "top 80%",
            toggleActions: "play none none none",
          },
        },
      );
    }
  </script>

  <style>
    /* Animation keyframes */
    @keyframes float {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    .animate-float {
      animation: float 6s ease-in-out infinite;
    }

    .animate-blob {
      animation: blob 7s infinite;
    }

    .animation-delay-2000 {
      animation-delay: 2s;
    }

    @keyframes blob {
      0% {
        transform: translate(0, 0) scale(1);
      }
      33% {
        transform: translate(30px, -50px) scale(1.1);
      }
      66% {
        transform: translate(-20px, 20px) scale(0.9);
      }
      100% {
        transform: translate(0, 0) scale(1);
      }
    }
  </style>
</section>
