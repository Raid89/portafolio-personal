---
const projects = [
  {
    name: 'Arcana Finance',
    description:
      'Reimagined the core dashboard for a crypto wealth product with modular data cards, advanced filters and a high-converting launch site built in Webflow.',
    year: '2023',
    link: '#',
    thumbnail: 'https://images.unsplash.com/photo-1618005198919-d3d4b5a92eee?auto=format&fit=crop&w=1200&q=80',
    tags: ['Product design', 'Webflow dev', 'Motion']
  },
  {
    name: 'Forma AI',
    description:
      'Design system and marketing ecosystem for an AI sales assistant. Delivered component libraries, interactive demos and Webflow CMS automation.',
    year: '2022',
    link: '#',
    thumbnail: 'https://images.unsplash.com/photo-1618005198900-3dc8f9a6723c?auto=format&fit=crop&w=1200&q=80',
    tags: ['Design system', 'Brand refresh', 'CMS automation']
  },
  {
    name: 'Marea Studio',
    description:
      'Immersive Webflow experience for a creative studio with scroll-based storytelling, custom interactions and a bespoke CMS for case studies.',
    year: '2021',
    link: '#',
    thumbnail: 'https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?auto=format&fit=crop&w=1200&q=80',
    tags: ['Art direction', 'Interactions', 'Webflow']
  }
];
---
<section id="proyectos" class="relative py-28">
  <div class="absolute inset-x-0 top-0 -z-10 h-px bg-gradient-to-r from-transparent via-white/15 to-transparent"></div>
  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="mb-16 flex flex-col gap-6 lg:flex-row lg:items-end lg:justify-between">
      <div class="max-w-xl space-y-4">
        <span class="text-xs font-mono uppercase tracking-[0.4em] text-white/40">Selected work</span>
        <h2 class="text-3xl font-semibold text-white md:text-4xl lg:text-5xl">Signature projects & collaborations</h2>
      </div>
      <a
        href="#contacto"
        class="inline-flex items-center gap-3 text-sm font-medium text-white/70 transition hover:text-white"
      >
        Request full portfolio
        <svg
          class="h-4 w-4 -rotate-45"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1.8"
          viewBox="0 0 24 24"
        >
          <path d="M5 12h14" />
          <path d="m12 5 7 7-7 7" />
        </svg>
      </a>
    </div>
    <div class="space-y-12">
      {projects.map((project, index) => (
        <article
          data-animate="fade-up"
          class={`group relative overflow-hidden rounded-[3rem] border border-white/10 bg-charcoal/70 transition duration-500 hover:border-accent/60 hover:bg-charcoal/90 ${
            index % 2 === 1 ? 'lg:flex-row-reverse' : ''
          }`}
          style={`transition-delay: ${index * 80}ms;`}
        >
          <div class="grid gap-10 lg:grid-cols-[1.2fr_1fr] lg:items-center">
            <figure class={`relative overflow-hidden ${index % 2 === 1 ? 'lg:order-2' : ''}`}>
              <div class="absolute inset-0 bg-gradient-to-br from-accent/30 via-transparent to-transparent opacity-0 transition duration-700 group-hover:opacity-100"></div>
              <img
                src={project.thumbnail}
                alt={project.name}
                class="h-full w-full object-cover transition duration-700 group-hover:scale-105"
                loading="lazy"
              />
            </figure>
            <div class={`flex h-full flex-col justify-between gap-8 p-10 ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
              <div class="space-y-5">
                <div class="flex items-center gap-4 text-xs font-mono uppercase tracking-[0.4em] text-white/40">
                  <span>{project.year}</span>
                  <span class="h-px w-10 bg-white/10"></span>
                  <span>Case study</span>
                </div>
                <h3 class="text-3xl font-semibold text-white">{project.name}</h3>
                <p class="text-sm leading-relaxed text-white/60">{project.description}</p>
              </div>
              <div class="flex flex-wrap items-center gap-4">
                <div class="flex flex-wrap gap-2 text-xs text-white/60">
                  {project.tags.map((tag) => (
                    <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1" key={tag}>
                      {tag}
                    </span>
                  ))}
                </div>
                <a
                  href={project.link}
                  class="group/link inline-flex items-center gap-2 text-sm font-medium text-white transition hover:text-accent"
                >
                  View case study
                  <svg
                    class="h-4 w-4 -rotate-45 transition-transform duration-300 group-hover/link:translate-x-1"
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.8"
                    viewBox="0 0 24 24"
                  >
                    <path d="M5 12h14" />
                    <path d="m12 5 7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
