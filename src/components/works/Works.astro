---
import { Icon } from "astro-icon/components";
import Betplay from "@assets/screenshots/betplay1.png";
import SuiteSlyfox from "@assets/screenshots/suite-slyfox.png"
import ControlNext from "@assets/screenshots/controlnext.png"
import { Image } from "astro:assets";

// Component Script (JavaScript/TypeScript code goes here!)

// Definición de la interfaz para los trabajos
interface Work {
    id: number;
    title: string;
    description: string;
    image: any;
    tags: string[];
    demoUrl?: string;
    codeUrl?: string;
}

// Datos de ejemplo - reemplazar con tus trabajos reales
const works: Work[] = [
    {
        id: 1,
        title: "Betplay",
        description:
            "Descripción detallada del proyecto 1 y las tecnologías utilizadas.",
        image: Betplay,
        tags: ["angular", "nestjs", "mongo", "sass", "postgres", "typescript"],
        demoUrl: "/betplay",
        codeUrl: "#",
    },
    {
        id: 3,
        title: "ControlNext",
        description:
            "Descripción detallada del proyecto 2 y las tecnologías utilizadas.",
        image: ControlNext,
        tags: [
            "react",
            "nestjs",
            "typescript",
            "nextjs",
            "socket",
            "postgres",
            "graphql",
        ],
        demoUrl: "/soon",
        codeUrl: "#",
    },
    {
        id: 4,
        title: "Suite Slyfox",
        description:
            "Descripción detallada del proyecto 2 y las tecnologías utilizadas.",
        image: SuiteSlyfox,
        tags: [
            "astro",
            "nestjs",
            "tailwind",
            "typescript",
            "socket",
            "postgres",
            "prisma",
        ],
        demoUrl: "/soon",
        codeUrl: "#",
    },
];
---

<div class="relative bg-white py-20 overflow-hidden">
    <!-- Sección de título -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2
                class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl"
            >
                Mis Trabajos
            </h2>
            <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
                Algunos de mis proyectos más recientes y destacados.
            </p>
        </div>

        <!-- Grid de trabajos -->
        <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {
                works.map((work) => (
                    <article class="flex flex-col overflow-hidden rounded-lg shadow-lg transition-transform duration-300 hover:scale-105">
                        <div class="flex-shrink-0">
                            <Image
                                class="h-48 w-full object-cover"
                                src={work.image}
                                alt={`Captura de pantalla de ${work.title}`}
                            />
                        </div>
                        <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                            <div class="flex-1">
                                <div class="flex flex-wrap gap-2 mt-2">
                                    {work.tags.map((tag, index) => (
                                        <Icon name={tag} class="tech-icon" />
                                    ))}
                                </div>
                                <a href={work.demoUrl} class="block mt-4">
                                    <h3 class="text-xl font-semibold text-gray-900">
                                        {work.title}
                                    </h3>
                                    <p class="mt-3 text-base text-gray-500">
                                        {work.description}
                                    </p>
                                </a>
                            </div>
                            <div class="mt-6 flex items-center justify-between">
                                {work.demoUrl && (
                                    <a
                                        href={work.demoUrl}
                                        rel="noopener noreferrer"
                                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-cyan hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                                    >
                                        Ver Más
                                    </a>
                                )}
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>

    <!-- Efecto de ola en la parte inferior -->
    <div class="absolute bottom-0 left-0 right-0 overflow-hidden">
        <svg
            class="w-full h-16 text-white"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
        >
            <path
                d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512,54.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z"
                opacity=".25"
                fill="currentColor"></path>
            <path
                d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z"
                opacity=".5"
                fill="currentColor"></path>
            <path
                d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"
                fill="currentColor"></path>
        </svg>
    </div>
</div>

<style>
    /* Estilos específicos del componente */
    .work-card {
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .work-card:hover {
        transform: translateY(-5px);
        box-shadow:
            0 10px 25px -5px rgba(0, 0, 0, 0.1),
            0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }
</style>

<script>
    import gsap from "gsap";
    import scrollTrigger from "gsap/ScrollTrigger";

    const icons = document.querySelectorAll(".tech-icon");

    icons.forEach((icon) => {
        const randomX = gsap.utils.random(-200, 200);
        const randomY = gsap.utils.random(-150, 150);
        const randomDelay = gsap.utils.random(0, 1.2, 0.1);

        gsap.fromTo(
            icon,
            {
                x: randomX,
                y: randomY,
                opacity: 0,
                rotate: gsap.utils.random(-30, 30),
            },
            {
                x: 0,
                y: 0,
                opacity: 1,
                rotate: 0,
                duration: 1,
                ease: "power3.out",
                delay: randomDelay,
                scrollTrigger: {
                    trigger: icon,
                    start: "top 70%",
                    toggleActions: "play none none none", // animar una vez
                },
            },
        );
    });
</script>
